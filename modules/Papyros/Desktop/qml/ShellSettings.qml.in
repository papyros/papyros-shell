import QtQuick 2.0
import Material 0.3
import Material.Extras 0.1
import Papyros.Desktop 0.1

pragma Singleton

Object {
    id: settings

    property alias appShelf: __appShelf
    property alias desktop: __desktop
    property alias session: __session

    KQuickConfig {
        id: __appShelf

        file: "papyros-shell"
        group: "appshelf"
        defaults: {
            "transparentShelf": true
        }
    }

    KQuickConfig {
        id: __desktop

        file: "papyros-shell"
        group: "desktop"
        defaults: {
            "silentMode": false,
            "accentColor": "teal",
            "backgroundUrl": "qrc:/images/papyros-wallpaper.png",
            "iconTheme": "Paper"
        }
    }

    KQuickConfig {
        id: __session

        file: "papyros-shell"
        group: "session"

        defaults: {
            idleDelay: "60"
        }
    }
}
